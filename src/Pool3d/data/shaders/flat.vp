//
// Transforms geometry by the uniform mvp matrix supplied.
//
// /////////////////////////////////////////////////////////////////

//#version 130
#version 150

// Transformation Matrix
uniform mat4 mvpMatrix;

// Incoming per vertex
in vec4 vertexPos;

void main(void)
{
    // Transform the geometry
    gl_Position = mvpMatrix * vertexPos;
}

